{
  "name": "utd-social",
  "version": "1.0.0",
  "description": "UTD Social - React Native app with Node.js backend",
  "private": true,
  "scripts": {
    "dev:frontend": "cd utd-map-app && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start": "./start-dev.sh",
    "install:all": "npm install && cd utd-map-app && npm install && cd ../backend && npm install",
    "build:frontend": "cd utd-map-app && npm run build",
    "build:backend": "cd backend && npm run build",
    "start:backend": "cd backend && npm start",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd utd-map-app && npm run lint",
    "lint:backend": "cd backend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "utd-map-app",
    "backend"
  ]
}
